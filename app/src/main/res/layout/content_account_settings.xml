<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AccountSettingsActivity"
    tools:showIn="@layout/activity_account_settings">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="417dp"
        android:layout_height="208dp"
        app:cardBackgroundColor="#00CECECE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00686868">

            <TextView
                android:id="@+id/textChangePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/change_password"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.05" />

            <EditText
                android:id="@+id/newTitle"
                android:layout_width="225dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:hint="Neues Passwort"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="@+id/textChangePassword"
                app:layout_constraintStart_toStartOf="@+id/textChangePassword"
                app:layout_constraintTop_toBottomOf="@+id/textChangePassword" />

            <EditText
                android:id="@+id/newPasswordRetyped"
                android:layout_width="225dp"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="Neues Passwort bestätigen"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="@+id/newTitle"
                app:layout_constraintStart_toStartOf="@+id/newTitle"
                app:layout_constraintTop_toBottomOf="@+id/newTitle" />

            <Button
                android:id="@+id/changePasswordButton"
                android:layout_width="182dp"
                android:layout_height="45dp"
                android:text="Passwort ändern"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/newPasswordRetyped"
                app:layout_constraintStart_toStartOf="@+id/newPasswordRetyped"
                app:layout_constraintTop_toBottomOf="@+id/newPasswordRetyped" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Ausloggen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="417dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#00CECECE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00686868">

            <TextView
                android:id="@+id/settingsChangeNicknameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Ändere deinen Nicknamen"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/settingsNewNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/settingsChangeNicknameText"
                app:layout_constraintStart_toStartOf="@+id/settingsChangeNicknameText"
                app:layout_constraintTop_toBottomOf="@+id/settingsChangeNicknameText" />

            <Button
                android:id="@+id/settingsChangeNickButton"
                android:layout_width="182dp"
                android:layout_height="45dp"
                android:text="Nickname ändern"
                app:layout_constraintEnd_toEndOf="@+id/settingsNewNickname"
                app:layout_constraintStart_toStartOf="@+id/settingsNewNickname"
                app:layout_constraintTop_toBottomOf="@+id/settingsNewNickname" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="417dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#00CECECE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00686868">

            <TextView
                android:id="@+id/othersTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Anderes"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Switch
                android:id="@+id/registeredSwitch"
                android:layout_width="257dp"
                android:layout_height="26dp"
                android:layout_marginTop="8dp"
                android:text="Spezielle Nachrichten"
                app:layout_constraintEnd_toEndOf="@+id/othersTitle"
                app:layout_constraintStart_toStartOf="@+id/othersTitle"
                app:layout_constraintTop_toBottomOf="@+id/othersTitle" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>